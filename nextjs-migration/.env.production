# TimeVault Production Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=https://timevault.app/api
NEXT_PUBLIC_COINGECKO_API_URL=https://api.coingecko.com/api/v3
NEXT_PUBLIC_METALS_API_URL=https://metals.live/api

# Analytics & Monitoring
NEXT_PUBLIC_GA_ID=your-google-analytics-id
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Thirdweb Configuration
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your-thirdweb-client-id
NEXT_PUBLIC_XRPL_NETWORK=mainnet

# Security
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://timevault.app

# Feature Flags
NEXT_PUBLIC_ENABLE_PREMIUM=true
NEXT_PUBLIC_ENABLE_NFT_MINTING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Performance
NEXT_PUBLIC_ENABLE_BUNDLE_ANALYZER=false
NEXT_PUBLIC_PRELOAD_ESSENTIAL_ASSETS=true
